bool swapped;
for (int i = 0; i < n - 1; i++) {
    swapped = false;
    for (int j = 0; j < n - i - 1; j++) {
        if (array[j] > array[j + 1]) {
            swap(array[j], array[j + 1]);
            swapped = true;
        }
    }
    // If no two elements were swapped in the inner loop, array is sorted
    if (!swapped) {
        break;
    }
}